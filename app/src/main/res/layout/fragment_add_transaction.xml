<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context="com.mancode.financetracker.ui.balances.AddBalanceFragment"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_transaction_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:title="@string/title_add_transaction"
        android:navigationIcon="@drawable/ic_close_white_24dp"
        android:background="?android:attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?android:attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <ScrollView
        android:layout_below="@id/add_transaction_toolbar"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        style="@style/AppTheme.Dialog">

        <include layout="@layout/edit_transaction" />

    </ScrollView>

</RelativeLayout>
