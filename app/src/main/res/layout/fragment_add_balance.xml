<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true"
    tools:context="com.mancode.financetracker.ui.balances.AddBalanceFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_balance_toolbar"
        style="@style/Widget.MaterialComponents.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:navigationIcon="@drawable/ic_close_white_24dp"
        app:title="@string/title_add_balance" />

    <include
        layout="@layout/edit_balance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/add_balance_toolbar" />

</RelativeLayout>
