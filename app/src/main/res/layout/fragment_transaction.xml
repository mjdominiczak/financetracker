<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/spacing_normal"
    android:layout_marginEnd="@dimen/spacing_normal"
    android:layout_marginTop="@dimen/spacing_normal"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/cardview_default_radius" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_normal">

        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="@dimen/list_date_width"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="1990-01-01" />

        <TextView
            android:id="@+id/transaction_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAppearance="?android:attr/textAppearanceListItem"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/transaction_date"
            card_view:layout_constraintStart_toEndOf="@+id/transaction_date"
            tools:text="4500,00" />

        <ImageButton
            android:id="@+id/transaction_menu_button"
            style="?android:attr/actionOverflowButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/button_transaction_menu"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/transaction_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textAppearance="?android:attr/textAppearanceListItem"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/transaction_date"
            card_view:layout_constraintTop_toBottomOf="@+id/transaction_date"
            tools:text="Sample description" />

        <CheckBox
            android:id="@+id/bookmarkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:actionBarItemBackground"
            android:button="@drawable/selector_bookmark"
            android:checked="false"
            card_view:layout_constraintBottom_toBottomOf="@+id/transaction_menu_button"
            card_view:layout_constraintEnd_toStartOf="@+id/transaction_menu_button"
            card_view:layout_constraintTop_toTopOf="@+id/transaction_menu_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>